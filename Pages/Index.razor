@page "/"
@using BlazorVersa.Data
@inject FirebaseService FirebaseService

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center mb-4">Welcome to VersaNet</h1>
            <p class="lead text-center">Your go-to platform for monitoring and analyzing internet speed.</p>
            <div class="text-center">
                <a href="/dashboard" class="btn btn-primary btn-lg">View Dashboard</a>
                <a href="/settings" class="btn btn-secondary btn-lg ms-2">Settings</a>
            </div>
            <hr class="my-5">
            <h2 class="text-center mb-4">Why Choose VersaNet?</h2>
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Easy to Use</h5>
                            <p class="card-text">VersaNet provides a simple and intuitive interface to monitor your internet speed effortlessly.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Powerful Graphs</h5>
                            <p class="card-text">Visualize your speed test results over time with interactive and insightful graphs.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Reliable Data</h5>
                            <p class="card-text">VersaNet fetches and displays accurate speed test data from reliable sources.</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Customizable Settings</h5>
                            <p class="card-text">Adjust settings according to your preferences for a personalized experience.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


